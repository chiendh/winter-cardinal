{
	"compilerOptions": {
		"target": "es5",
		"newLine": "lf",
		"outDir": "src/main/javascript/",
		"sourceMap": true,
		"module": "es6",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"importHelpers": true,
		"declaration": true,
		"declarationDir": "dist/types",

		"lib": [ "dom", "es5", "es2015.core", "es2015.promise" ],

		"strict": true,
		"downlevelIteration": false,
		"preserveConstEnums": true,
		"stripInternal": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/main/typescript/"
	],
	"exclude": [
		"node_modules"
	]
}
